<!-- Homepage -->
<div class="container">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Onion Scrape</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/favorites">Link</a>
        </li>  
      </ul>
    </div>
  </nav>
</div>

<div class="container">
  <div class="jumbotron">
    <h1 class="display-4">Stay Current with The Onion</h1>
    <p class="lead">Click the "Get Layers" button to view the most recent articles published by The Onion!</p>
    <hr class="my-4">
    <p>Click on the "Get Layers" button to get started!</p>
  </div>
</div>

<div class="container">
  <a class="btn btn-primary btn-lg" href="#" role="button">Get Layers</a>
</div>

<div class="container">
  <ul>
    {{#each article}}
      <p>Headline: {{headline}}</p>
      <p>Summary: {{summary}}</p>
      <p>More Info: {{url}}</p>
      <a class="btn btn-primary btn-lg" href="#" role="button">Save It!</a>
    {{/each}}
  </ul>
</div>